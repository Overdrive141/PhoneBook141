<Window x:Class="PhoneBook.Contacts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneBook"
        mc:Ignorable="d"
        Title="Contacts" Height="384.096" Width="800">
    <TabControl HorizontalAlignment="Left" Height="341.144" Margin="6,11.101,0,0" VerticalAlignment="Top" Width="780">
        <TabItem Header="Add Contact">
            <Grid Background="#FFE5E5E5" Margin="0,1.333,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="14*"/>
                    <ColumnDefinition Width="29*"/>
                    <ColumnDefinition Width="43*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtFName" HorizontalAlignment="Left" Height="23" Margin="3.438,33.121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213.707" Grid.Column="1"/>
                <TextBox x:Name="txtAddress"  HorizontalAlignment="Left" Height="63.723" Margin="137.861,33.121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213.707" Grid.Column="2"/>
                <TextBox x:Name="txtLName" HorizontalAlignment="Left" Height="23" Margin="3.438,73.844,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213.707" Grid.Column="1"/>
                <TextBox x:Name="txtPhArea" HorizontalAlignment="Left" Height="23" Margin="3.438,117.56,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="59.244" Grid.Column="1"/>
                <TextBox x:Name="txtPhNumber" HorizontalAlignment="Left" Height="23" Margin="62.682,117.56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154.463" RenderTransformOrigin="0.911,0.495" Grid.Column="1"/>
                <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" Margin="3.438,162.402,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213.707" Grid.Column="1"/>
                <TextBox x:Name="txtCompany" HorizontalAlignment="Left" Height="23" Margin="3.438,206.682,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213.707" Grid.Column="1"/>
                <TextBox x:Name="txtJobtitle" HorizontalAlignment="Left" Height="23" Margin="3.438,247.872,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213.707" Grid.Column="1"/>
                <Label Content="First Name" HorizontalAlignment="Left" Height="23" Margin="10,33.121,0,0" VerticalAlignment="Top" Width="114.105"/>
                <Label Content="Last Name" HorizontalAlignment="Left" Height="23" Margin="10,73.844,0,0" VerticalAlignment="Top" Width="114.105"/>
                <Label Content="Phone Number" HorizontalAlignment="Left" Height="23" Margin="10,117.56,0,0" VerticalAlignment="Top" Width="114.105"/>
                <Label Content="Email" HorizontalAlignment="Left" Height="23" Margin="10,162.402,0,0" VerticalAlignment="Top" Width="114.105"/>
                <Label Content="Company" HorizontalAlignment="Left" Height="25.667" Margin="10,206.682,0,0" VerticalAlignment="Top" Width="114.105"/>
                <Label Content="Job Title" HorizontalAlignment="Left" Height="23" Margin="10,247.872,0,0" VerticalAlignment="Top" Width="114.105"/>
                <Label Content="Address" HorizontalAlignment="Left" Height="23" Margin="3.333,33.121,0,0" VerticalAlignment="Top" Width="114.105" Grid.Column="2"/>
                <Label Content="Photo" HorizontalAlignment="Left" Height="23" Margin="3.333,113.56,0,0" VerticalAlignment="Top" Width="114.105" Grid.Column="2"/>
                <Button x:Name="btnUpload" Content="Upload" Grid.Column="2" HorizontalAlignment="Left" Height="21.333" Margin="137.861,117.56,0,0" VerticalAlignment="Top" Width="213.707" Click="PhotoUpload_Click"/>
                <Button x:Name ="btnSave" Content="Save" Grid.Column="2" HorizontalAlignment="Left" Margin="172.667,209.682,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
            </Grid>
        </TabItem>
        <TabItem Header="View Contacts">
            <Grid Background="#FFE5E5E5">
                <ListBox x:Name="listContacts" ItemTemplate="{DynamicResource tmpContact}" HorizontalAlignment="Left" Height="293.184" VerticalAlignment="Top" Width="239" Margin="10,10,0,0">
                    <ListBox.Resources>

                        <DataTemplate x:Key="tmpContact">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Height="48" Width="48" VerticalAlignment="Center">
                                    <Ellipse.Fill>
                                        <ImageBrush x:Name="Contactr" ImageSource="{DynamicResource ContactPhoto}"/>

                                    </Ellipse.Fill>
                                </Ellipse>
                                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="12,0,0,0">
                                    <TextBlock Name="txtListName" Text="{Binding Name}"/>
                                    <TextBlock Name="txtListNumber" Text="{Binding PhNumber}" FontSize="10" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.Resources>
                </ListBox>

                <Button Content="Refresh" HorizontalAlignment="Left" Height="36.666" Margin="341.667,65.606,0,0" VerticalAlignment="Top" Width="83.333" Click="Refresh_Click"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
